import java.util.*;
public class Main {
  public static void main(String[] args) {
	Scanner sc=new Scanner(System.in);
	int q=sc.nextInt();
	for(int i=0;i<q;i++)
	{
	System.out.println("n value");
	int n=sc.nextInt();
	int sum=0;
	for(int j=0;j<=2*n;j+=2)
	{
	sum+=j;
	}
	System.out.println("sum of " +n+ " even no's is");
	System.out.println(sum);
	}
	}
        }
