 class Patternp
{
public static void main(String args[])
{
Scanner sc=new Scanner(System.in);
System.out.println("enter n");
int n=sc.nextInt();
int i,j,k;
for(i=1;i<=n;i++)
{
for(k=1;k<=(n-i);k++)
{
System.out.print(" ");
}
for(j=1;j<=(2*i-1);j++)
{
System.out.print("*");
}
System.out.print("\n");
}
for(i=1;i<=n;i++)
{
for(k=1;k<=i;k++)
{
System.out.print(" ");
}
for(j=2*n-1;j>2*i;j--)
{
System.out.print("*");
}
System.out.print("\n");
}
}
}
